android_app {
    name: "anemo",
    manifest: "AppManifest.xml",
    sdk_version: "30",
    optimize: {
        proguard_flags_files: [
            "proguard-rules.pro",
        ],
    },
    static_libs: [
        "anemo_documents",
        "anemo_password",
        "anemo_receiver",
        "anemo_snippet",
    ],
}

