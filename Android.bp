    name: "anemo_documents",
    manifest: "java/eu/bbllw8/anemo/documents/AndroidManifest.xml",
    sdk_version: "30",
    resource_dirs: [
        "java/eu/bbllw8/anemo/documents/res",
    ],
    srcs: [
        "java/eu/bbllw8/anemo/documents/**/*.java",
    ],
    static_libs: [
        "anemo_home",
        "anemo_lock",
        "anemo_shell",
        "androidx.annotation_annotation",
