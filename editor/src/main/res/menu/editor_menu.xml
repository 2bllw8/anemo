            <item
                android:id="@+id/editorShowShell"
                android:checkable="true"
                android:showAsAction="never"
                android:title="@string/editor_menu_show_shell" />
        </menu>
    </item>

    <item
        android:id="@+id/editorHelp"
        android:showAsAction="never"
        android:alphabeticModifiers="FUNCTION"
        android:alphabeticShortcut="1"
        android:title="@string/editor_menu_help" />
